<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="30dp"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    android:background="@color/beige"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="308dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgrc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/palmtreeo"></ImageView>

        <TextView
            android:id="@+id/txt_sehirismi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/imgrc"
            android:padding="8dp"
            android:text="Title"
            android:textColor="@color/beige"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/txt_otelismi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/txt_sehirismi"
            android:padding="8dp"
            android:text="Title"
            android:textColor="@color/beige"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/textview3_"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/imgrc"
            android:padding="8dp"
            android:text="Oda Tipi:"
            android:textColor="@color/beige"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/textOdatipi"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/textview3_"
            android:padding="8dp"
            android:text="Title"
            android:textColor="@color/beige"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/txtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@+id/imgrc"
            android:padding="8dp"
            android:text="Oda numarası:"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/txtOdaNo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@+id/txtn"
            android:padding="8dp"
            android:text="Oda numarası:"
            android:textSize="20dp"></TextView>


        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="170dp"
            android:layout_toRightOf="@+id/imgrc"
            android:padding="8dp"
            android:text="Tarihler:"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/txtDateGidis"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="170dp"
            android:layout_toRightOf="@+id/a"
            android:padding="8dp"
            android:text="Tarihler:"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/txtDateDonus"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="230dp"
            android:layout_toRightOf="@+id/imgrc"
            android:layout_marginStart="105dp"
            android:padding="8dp"
            android:text="Tarihler:"
            android:textSize="10dp"></TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>