<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="25dp"
    android:background="@color/teal_700"
    tools:context=".cerceve.HesapAyarFragment">

    <ImageView
        android:id="@+id/imgyukle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/palmtreeo"
        android:layout_marginStart="80dp"></ImageView>

    <Button
        android:id="@+id/btnfotoyukle"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="150dp"
        android:text="Fotoğraf Yükle"></Button>

    <TextView
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:text="İsim: "
        android:textSize="18dp"></TextView>

    <TextView
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:text="Şifre: "
        android:textSize="18dp"></TextView>

    <EditText
        android:id="@+id/edtSifre"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp"></EditText>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FbtnGuncelle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/icplus"
        app:backgroundTint="@color/gri"
        android:tint="@color/teal_100"
        ></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <EditText
        android:id="@+id/edtIsim"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="250dp"></EditText>


</androidx.cardview.widget.CardView>